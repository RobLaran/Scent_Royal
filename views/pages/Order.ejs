<div class="order-container wrapper">
    <p class="confirm-top">Thank you. Your order has been received.</p>

    <!-- Top mini summary box -->
    <div class="card p-20">
        <div class="order-mini">
            <div class="row">
                <div class="upper">Order Number:</div>
                <div class="value"><%= order.id %></div>
            </div>
            <div class="row">
                <div class="upper">Date:</div>
                <div class="value"><%= order.created_at %></div>
            </div>
            <div class="row">
                <div class="upper">Total:</div>
                <div class="value blue">$1,003.00</div>
            </div>
            <div class="row">
                <div class="upper">Payment Method:</div>
                <div class="value"><%= info.payment_option %></div>
            </div>
        </div>
    </div>

    <p class="small mt-14">Pay with cash upon delivery.</p>

    <!-- Order details table -->
    <div class="card p-20 mt-18">
        <h3 class="section-title">Order details</h3>
        <table class="table order-table">
            <thead>
                <tr>
                    <th>PRODUCT</th>
                    <th style="width: 160px">TOTAL</th>
                </tr>
            </thead>
            <tbody class="order-table-body">
                <% if (!!items) { %> <% items.forEach(item => { %>
                <tr class="row">
                    <td class="item-title"><%= item.title %></td>
                    <td class="item-subtotal total">
                        â‚±<span
                            ><%= (item.price * item.quantity).toFixed(2)
                            %></span
                        >
                    </td>
                </tr>
                <% }) %> <% } %>
            </tbody>
            
            <tfoot>
                <tr>
                    <td>SUBTOTAL:</td>
                    <td class="subtotal">$ <span></span></td>
                </tr>
                <tr>
                    <td>SHIPPING:</td>
                    <td>Free Shipping</td>
                </tr>
                <tr>
                    <td>PAYMENT METHOD:</td>
                    <td><%= info.payment_option %></td>
                </tr>
                <tr>
                    <td><strong>TOTAL:</strong></td>
                    <td class="main-total"><strong>$ <span></span> </strong></td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
